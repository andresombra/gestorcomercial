@model IEnumerable<Gestor.Dominio.Entidades.Produto>
@{
    ViewData["Title"] = "Lista Produtos";
    var exclusao_vc = new ExclusaoViewModel("Produtos");
}
<link rel="stylesheet" type="text/css" href="~/lib/datatables/css/jquery.dataTables.min.css" />

<div class="card">
    <div class="card-header">
        <h4>
            <i class="fas fa-user-friends"></i>&nbsp;LISTA PRODUTOS&nbsp;|&nbsp;<a asp-action="Create" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i>&nbsp;Novo</a>
        </h4>
    </div>
    <div class="card-body">
        <table id="tblproduto" class="table table-striped table-bordered table-responsive-sm">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NomeProduto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Unidade)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CodigoSecundario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ValorVenda)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.QtdeEstoque)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fornecedor)
                    </th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeProduto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unidade.NomeUnidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CodigoSecundario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ValorVenda)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QtdeEstoque)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria.NomeCategoria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="far fa-edit"></i></a> &nbsp;
                            <a class="text-danger" asp-action="Excluir" asp-controller="Exclusao" asp-route-exc="@exclusao_vc.Json(item.Id,item.NomeProduto)"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    <script type="text/javascript" src="~/js/funcoes.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script>
        paginacao("#tblproduto");
    </script>
}
