@model Gestor.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login de Acesso";
}

<div class="card card">
        <div class="card-header">
            <div class="card-title">
                <h3><i class="fa fa-lock"></i>&nbsp;Efetuar Login</h3>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 align-center">
                    <label class="text-danger">@ViewBag.Msg</label>
                    <form asp-action="Confirmar">
                        <div class="form-group col-md-2">
                            <label>Login</label>
                            <input class="form-control" asp-for="login" required />
                        </div>
                        <div class="form-group col-md-2">
                            <label>Senha</label>
                            <input class="form-control" asp-for="senha" required type="password" value="admin" />
                        </div>
                        <div class="col-xs-12 col-sm-8 col-sm-offset-3 align-center">
                            <button class="btn btn-info" id="btnSalvar" type="submit">
                                <i class="ace-icon fa fa-check-circle bigger-110"></i>
                                Entrar
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
<script>
    window.onload = function () {
        document.getElementById("login").focus();
    };
</script>

